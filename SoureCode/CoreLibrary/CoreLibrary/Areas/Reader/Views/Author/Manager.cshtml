@model IEnumerable<Book>
@{
    ViewBag.Title = "Published Books";
    Layout = "_LayoutEmpty";
    int i = 1;
}
<div class="ms-5 mb-4 fs-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="reader">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Published Manager</li>
        </ol>
    </nav>
</div>
<div class="row mx-0 justify-content-center">
    <div class="col-8">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Published Date Time</th>
                    <th scope="col">~</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var book in Model)
                {
                    <tr>
                        <th scope="row">@(i++)</th>
                        <td class="text-wrap w-50">
                            <p class="w-100">@book.Name</p>
                        </td>
                        <td>@book.DateTimePosted</td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@book.Id" class="text-decoration-none text-success">
                                <i class="icofont-pencil-alt-2"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <div class="col-3">
        <ul class="list-group list-group-flush">
            <li class="list-group-item list-group-item-success">General</li>
            <li class="list-group-item">
                <span class="w-75 d-inline-block">Published Books</span>
                <span class="text-muted">20</span>
            </li>
            <li class="list-group-item">
                <span class="w-75 d-inline-block">Sold Books</span>
                <span class="text-muted">105</span>
            </li>
            <li class="list-group-item">
                <span class="w-75 d-inline-block">Sales</span>
                <span class="text-muted">$105.36</span>
            </li>
            <li class="list-group-item">
                <span class="w-75 d-inline-block">Rank</span>
                <span class="text-muted">36</span>
            </li>
        </ul>
    </div>
</div>
