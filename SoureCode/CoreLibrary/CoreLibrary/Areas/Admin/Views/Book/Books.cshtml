@model IList<Book>
@{
    ViewBag.Title = "Books Manager";
    int pos = 1;
}

@section styles{

}
<div class="alert alert-success" role="alert">
    <span class="fs-2">Books Manager</span>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Name</th>
            <th scope="col">Date Published</th>
            <th scope="col">Category</th>
            <th scope="col">Language</th>
            <th scope="col">Author</th>
            <th scope="col">Price</th>
            <th scope="col">Sold</th>
            <th scope="col">Rate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            int star = 0;
            int n = 0;
            <tr>
                <th scope="row">@pos</th>
                <td>@book.Name</td>
                <td>@book.DateTimePosted</td>
                <td>@book.Category.Name</td>
                <td>@book.Language.Name</td>
                <td>@(book.Author.LastName + " " + book.Author.FirstName)</td>
                <td>@book.Price</td>
                <td>@book.Baskets.Sum(bk => bk.Price)</td>
                @foreach(var i in book.Interactions)
                {                    
                    if(i.Evaluation != 0)
                    {
                        star = star + i.Evaluation;
                        n = n + 1;
                    }
                }
                @if(n != 0 )
                {
                    <td>@(star / n)</td>
                }
                else
                {
                    <td>0</td>
                }
            </tr>
            pos++;
            star = 0;
        }
    </tbody>
</table>
@section scripts{

